  <define name="tei">
    <zeroOrMore>
      <choice>
        <element>
          <nsName ns="http://www.tei-c.org/ns/1.0"/>
          <ref name="tei"/>
        </element>
        <attribute name="xml:id"/>
        <attribute>
          <nsName ns=""/>
        </attribute>
        <text/>
      </choice>
    </zeroOrMore>
  </define>
  <start>
    <element name="TEI">
